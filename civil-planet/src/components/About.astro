        background-color: #fff;
        border-radius: 8px;
        padding: 20px;
      }

      .section h3 {
        font-size: 1.2rem;
        color: var(--accent-color);
        margin-bottom: 0.5em;
      }

      .section ul {
        list-style: none;
        padding-left: 0;
        margin: 0;
      }

      .section li {
        margin-bottom: 0.8em;
      }

      .section li strong {
